<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fivefivelike.mybaselibrary.test" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.fivefivelike.mybaselibrary.test"
        android:targetPackage="com.fivefivelike.mybaselibrary.test" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.fivefivelike.mybaselibrary.base.BigImageviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/album_TransparentActivity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />
        <activity
            android:name="com.yanzhenjie.album.ui.AlbumActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/album_ChoiceActivity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />
        <activity
            android:name="com.yanzhenjie.album.ui.GalleryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/album_ChoiceActivity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />
        <activity
            android:name="com.yanzhenjie.album.ui.GalleryAlbumActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/album_ChoiceActivity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />
        <activity
            android:name="com.yanzhenjie.album.ui.CameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/album_TransparentActivity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <provider
            android:name="com.yanzhenjie.album.provider.CameraFileProvider"
            android:authorities="com.fivefivelike.mybaselibrary.test.album.camera.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            android:multiprocess="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/album_camera_provider" />
        </provider>

        <activity
            android:name="com.yanzhenjie.permission.PermissionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/permission_PermissionActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <activity
            android:name="com.yanzhenjie.durban.DurbanActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />

        <provider
            android:name="com.just.agentweb.AgentWebFileProvider"
            android:authorities="com.fivefivelike.mybaselibrary.test.AgentWebFileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/web_files_paths" />
        </provider>

        <activity
            android:name="com.just.agentweb.ActionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:launchMode="standard"
            android:theme="@style/actionActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
        </activity>

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>