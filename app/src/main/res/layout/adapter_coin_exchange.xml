<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/lin_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_30px"
        android:layout_marginRight="@dimen/trans_30px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingRight="@dimen/trans_25px"
            android:paddingTop="@dimen/trans_20px">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.fivefivelike.mybaselibrary.view.FontTextview
                    android:id="@+id/tv_coin_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_15px"
                    android:text="BTC"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_48px"
                    app:TypeFace="SemiBold"/>

                <com.fivefivelike.mybaselibrary.view.FontTextview
                    android:id="@+id/tv_coin_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BTC"
                    android:textColor="@color/color_font3"
                    android:textSize="@dimen/text_trans_28px"
                    app:TypeFace="SemiBold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.fivefivelike.mybaselibrary.view.FontTextview
                    android:id="@+id/tv_coin_market_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trans_10px"
                    android:paddingRight="@dimen/trans_20px"
                    android:paddingTop="@dimen/trans_10px"
                    android:text="市值$58,497,247,500"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_24px"
                    app:TypeFace="Medium"/>

                <com.fivefivelike.mybaselibrary.view.FontTextview
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BTC"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_22px"
                    app:TypeFace="SemiBold"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/trans_15px"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <com.fivefivelike.mybaselibrary.view.FontTextview
                android:id="@+id/tv_coin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00000008"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_32px"
                app:TypeFace="SemiBold"/>

            <com.fivefivelike.mybaselibrary.view.FontTextview
                android:id="@+id/tv_coin_probably"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="≈¥14.7345"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_28px"
                app:TypeFace="SemiBold"/>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_change"
            android:layout_width="@dimen/trans_144px"
            android:layout_height="@dimen/trans_70px"
            android:layout_gravity="center"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ic_piv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="@dimen/trans_10px"
                />

            <com.fivefivelike.mybaselibrary.view.FontTextview
                android:id="@+id/tv_gains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+ 50.79%"
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_28px"
                app:TypeFace="SemiBold"/>


        </FrameLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_30px"
        android:background="@color/base_mask"/>

</FrameLayout>