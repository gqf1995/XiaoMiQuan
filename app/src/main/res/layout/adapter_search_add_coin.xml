<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_140px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_35px"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_35px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.fivefivelike.mybaselibrary.view.FontTextview
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="比特币BTC/USDT"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_28px"
                app:TypeFace="Regular"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/trans_5px"/>

            <com.fivefivelike.mybaselibrary.view.FontTextview
                android:id="@+id/tv_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bitfinex"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"
                app:TypeFace="Regular"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/trans_35px"
            android:layout_height="@dimen/trans_35px"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_40px"
        android:layout_marginRight="@dimen/trans_40px"
        android:background="@color/base_mask"/>

</LinearLayout>