<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:background="@color/base_mask" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xiaomiquan.widget.JudgeNestedScrollView
                android:id="@+id/scrollView_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/trans_40px">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_20px"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_tv_property_appraisement"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/trans_30px" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/trans_15px"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_usd_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/trans_30px" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/trans_20px"
                                    android:text="@string/str_tv_usd"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/trans_30px" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/trans_40px"
                                android:text="@string/str_tv_usable_usd"
                                android:textColor="@color/color_font2"
                                android:textSize="@dimen/trans_28px" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/trans_15px"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_usable_usd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/trans_30px" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/trans_20px"
                                    android:text="@string/str_tv_usd"
                                    android:textColor="@color/color_font2"
                                    android:textSize="@dimen/trans_28px" />

                            </LinearLayout>
                        </LinearLayout>

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_tab"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_80px"
                        android:background="@color/base_mask"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/trans_20px">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_20px"
                            android:gravity="center"
                            android:text="@string/str_currency"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_now_price"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_tv_num"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_20px"
                            android:gravity="center"
                            android:text="@string/str_tv_operation"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px" />


                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/pull_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:scrollbars="none" />
                    <!--<include layout="@layout/merge_layout_no_data"/>-->
                </LinearLayout>

            </com.xiaomiquan.widget.JudgeNestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</LinearLayout>