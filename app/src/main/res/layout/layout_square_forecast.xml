<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_forecast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/trans_14px"
    android:background="@color/base_mask"
    android:orientation="vertical"
    android:padding="@dimen/trans_24px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_Clock"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

        <TextView
            android:id="@+id/tv_forecast_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_17px"
            android:text="- -"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_20px"
        android:orientation="horizontal">

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_Book"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

        <TextView
            android:id="@+id/tv_forecast_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_17px"
            android:text="- -"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_20px"
        android:orientation="horizontal">

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_Notifications"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

        <TextView
            android:id="@+id/tv_forecast_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_17px"
            android:text="- -"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px" />

    </LinearLayout>


</LinearLayout>

