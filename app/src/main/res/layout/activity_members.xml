<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <TextView
        android:id="@+id/tv_input_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_mask"
        android:padding="@dimen/trans_15px"
        android:text="@string/str_tv_director"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_28px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/trans_15px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="@dimen/trans_100px"
            android:layout_height="@dimen/trans_100px"
            android:layout_marginLeft="@dimen/trans_10px"
            android:src="@color/color_blue" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_20px"
            android:singleLine="true"
            android:text="hahhaha"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_32px" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/str_tv_main"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_28px" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_mask"
        android:padding="@dimen/trans_15px"
        android:text="@string/str_tv_member"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_28px"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/trans_15px"
        android:scrollbars="none" />


</LinearLayout>
