<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <com.xiaomiquan.widget.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/trans_30px">

            <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
                android:id="@+id/et_con"
                android:layout_width="match_parent"
                android:layout_height="@dimen/durban_dp_200"
                android:layout_marginTop="@dimen/album_dp_10"
                android:gravity="left|top"
                android:hint="@string/str_et_hint"
                android:inputType="textImeMultiLine"
                android:maxLength="140"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/trans_32px"
                app:met_baseColor="@color/white"
                app:met_primaryColor="@color/color_blue"
                app:met_textColor="@color/color_font2"
                app:met_textColorHint="@color/color_font4"
                app:met_underlineColor="@color/base_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/album_dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/trans_32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/album_dp_15"
                    android:gravity="center"
                    android:text="@string/str_input_limit"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/trans_32px" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_1px"
                android:background="@color/base_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/trans_30px">

                <skin.support.widget.SkinCompatCheckBox
                    android:id="@+id/ck_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_ck_live"
                    android:textColor="@color/color_font1"
                    android:theme="@style/BlueCheckBox" />

                <skin.support.widget.SkinCompatCheckBox
                    android:id="@+id/ck_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_100px"
                    android:checked="true"
                    android:text="@string/str_ck_circle"
                    android:textColor="@color/color_font1"
                    android:theme="@style/BlueCheckBox" />
            </LinearLayout>

        </LinearLayout>
    </com.xiaomiquan.widget.StickyScrollView>


</LinearLayout>
