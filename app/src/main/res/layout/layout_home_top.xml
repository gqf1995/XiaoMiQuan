<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px"
    android:paddingTop="@dimen/trans_20px"
    >

    <FrameLayout
        android:id="@+id/fl_pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingRight="@dimen/trans_30px"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_50px"
            android:layout_height="@dimen/trans_50px"
            android:src="@color/color_blue"/>

    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>