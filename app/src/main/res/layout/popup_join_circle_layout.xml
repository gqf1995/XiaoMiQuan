<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_transparent_50"
    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/lin_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/trans_20px"
            android:paddingRight="@dimen/trans_20px"
            android:paddingTop="@dimen/trans_50px">

            <LinearLayout
                android:id="@+id/lin_creat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/trans_64px"
                        android:layout_height="@dimen/trans_64px"
                        android:src="@color/color_blue" />

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/ic_Chat_Bubble"
                        android:textColor="@color/color_light_white"
                        android:textSize="@dimen/text_trans_32px" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_20px"
                    android:text="创建圈子"
                    android:textColor="@color/black"
                    android:textSize="@dimen/trans_32px" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/lin_join"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/trans_64px"
                        android:layout_height="@dimen/trans_64px"
                        android:src="@color/glod" />

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/ic_Box"
                        android:textColor="@color/color_light_white"
                        android:textSize="@dimen/text_trans_32px" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_20px"
                    android:text="加入圈子"
                    android:textColor="@color/black"
                    android:textSize="@dimen/trans_32px" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_4px"
            android:layout_marginTop="@dimen/trans_30px"
            android:background="@color/base_mask_dark" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_trans_32px" />

    </LinearLayout>


</RelativeLayout>