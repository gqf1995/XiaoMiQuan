<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:background="@color/base_mask" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_gameplay_introduced"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/trans_30px">

                    <skin.support.widget.SkinCompatImageView
                        android:layout_width="@dimen/trans_65px"
                        android:layout_height="@dimen/trans_65px"
                        app:srcCompat="@drawable/create_team" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_20px"
                        android:text="@string/str_tv_gameplay_introduced"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/trans_35px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_revenue_ranking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/trans_30px">

                    <skin.support.widget.SkinCompatImageView
                        android:layout_width="@dimen/trans_65px"
                        android:layout_height="@dimen/trans_65px"
                        app:srcCompat="@drawable/create_team" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_20px"
                        android:text="@string/str_tv_revenue_ranking"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/trans_35px" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="@color/base_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/trans_40px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_assets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_35px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/trans_15px"
                        android:text="@string/str_tv_total_assets"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_25px" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_usable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_35px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/trans_15px"
                        android:text="@string/str_tv_usable_usd"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_25px" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/tv_assets_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/str_tv_assets_report"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/trans_32px" />

                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/trans_20px"
                    android:text="@string/ic_Next"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_30px" />

            </LinearLayout>

            <include layout="@layout/layout_person_operation" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>