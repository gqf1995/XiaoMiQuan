<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/trans_20px">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_70px"
            android:layout_height="@dimen/trans_70px"
            android:layout_marginRight="@dimen/trans_20px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/trans_2px"
                android:text="名字"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_32px"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="内容"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_30px"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_commit"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_10px"
            android:paddingLeft="@dimen/trans_50px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_10px"
            android:text="@string/str_consent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_trans_28px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px"
        android:background="@color/base_mask"/>


</LinearLayout>