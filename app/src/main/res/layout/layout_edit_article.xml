<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.fivefivelike.mybaselibrary.view.IconFontTextview
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_50"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="+添加封面"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_40px" />

    <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
        android:id="@+id/et_input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/album_dp_15"
        android:hint="标题"
        android:maxLength="25"
        android:textColorHint="@color/color_font1"
        android:textSize="@dimen/text_trans_35px"
        android:textStyle="bold"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/color_blue"
        app:met_textColor="@color/color_font1"
        app:met_textColorHint="@color/color_font4"
        app:met_underlineColor="@color/base_mask" />

</LinearLayout>
