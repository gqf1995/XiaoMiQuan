<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/trans_20px"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/trans_80px"
        android:layout_height="@dimen/trans_80px"
        app:srcCompat="@drawable/ic_language" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_16px"
        android:text="大V直播"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_28px" />

</LinearLayout>
