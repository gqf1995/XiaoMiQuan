<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_trans_50px"
        android:orientation="vertical"
        android:padding="@dimen/text_trans_30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/trans_32px" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/text_trans_10px"
                android:text="复制"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/trans_32px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/trans_30px"
            android:background="@color/color_blue"
            android:padding="@dimen/text_trans_20px"
            android:text="点击生成"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/trans_32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_30px"
            android:text="1 一个码仅可使用一次"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/trans_32px" />
    </LinearLayout>

</LinearLayout>
