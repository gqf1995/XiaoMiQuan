<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_180px"
            android:layout_height="@dimen/trans_180px"
            android:layout_marginBottom="@dimen/trans_30px"
            android:layout_marginTop="@dimen/trans_80px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/trans_80px"
            android:gravity="center"
            android:text="@string/str_change_header"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_28px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/trans_40px"
                android:gravity="center"
                android:text="@string/str_nike_name"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_28px"/>

            <EditText
                android:id="@+id/tv_nick_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/trans_40px"
                android:layout_marginRight="@dimen/trans_40px"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_toast_input_nike_name"
                android:lines="1"
                android:textColor="@color/color_font2"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_28px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:layout_marginLeft="@dimen/trans_40px"
            android:layout_marginRight="@dimen/trans_40px"
            android:background="@color/base_mask"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/trans_40px"
                android:gravity="center"
                android:text="@string/str_Introduction"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_28px"/>

            <EditText
                android:id="@+id/tv_introduction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/trans_40px"
                android:layout_marginRight="@dimen/trans_40px"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_toast_introduction"
                android:lines="1"
                android:textColor="@color/color_font2"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_28px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:layout_marginLeft="@dimen/trans_40px"
            android:layout_marginRight="@dimen/trans_40px"
            android:background="@color/base_mask"/>


    </LinearLayout>

</LinearLayout>