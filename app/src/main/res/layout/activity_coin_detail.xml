<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/trans_40px">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_32px"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/trans_20px">

                        <TextView
                            android:id="@+id/tv_price_usd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_10px"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_40px"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_5px"
                            android:text="USD"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_20px"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price_cny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/trans_5px"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_trans_24px"/>

                    <TextView
                        android:id="@+id/tv_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_trans_24px"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_coin_icon"
                    android:layout_width="@dimen/trans_145px"
                    android:layout_height="@dimen/trans_145px"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_mask"
                android:paddingBottom="@dimen/trans_15px"
                android:paddingLeft="@dimen/trans_40px"
                android:paddingTop="@dimen/trans_15px"
                android:text="@string/str_global_market"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_global_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_look_more_global_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_look_more"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_mask"
                android:paddingBottom="@dimen/trans_15px"
                android:paddingLeft="@dimen/trans_40px"
                android:paddingTop="@dimen/trans_15px"
                android:text="@string/str_comprehensive_msg"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>