<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/trans_20px">


    <ImageView
        android:id="@+id/ic_pic"
        android:layout_width="@dimen/trans_200px"
        android:layout_height="@dimen/trans_200px" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_15px"
        android:layout_marginRight="@dimen/trans_30px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/12/21"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_24px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_20px"
            android:maxLines="2"
            android:text="con"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_30px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/trans_20px">

                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/ic_Chat"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_30px" />

                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_10px"
                    android:layout_marginRight="@dimen/trans_40px"
                    android:singleLine="true"
                    android:text="10"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_28px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/trans_20px">

                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/ic_Like"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_30px" />

                <TextView
                    android:id="@+id/tv_praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_10px"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_28px" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_head"
        android:layout_width="@dimen/trans_60px"
        android:layout_height="@dimen/trans_60px"
        android:src="@color/color_blue" />

</LinearLayout>