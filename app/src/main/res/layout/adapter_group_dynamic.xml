<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/trans_25px"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_pic"
                android:layout_width="@dimen/trans_40px"
                android:layout_height="@dimen/trans_40px"
                android:layout_marginRight="@dimen/trans_15px"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_22px"/>

            <TextView
                android:id="@+id/tv_total_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_28px"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/trans_44px"
                android:layout_height="@dimen/trans_44px"
                android:layout_marginRight="@dimen/trans_25px"
                android:background="@drawable/select_commit"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_32px"/>

            <TextView
                android:id="@+id/tv_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_25px"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_20px"
                android:gravity="center"
                android:text="@string/str_hold_proportion_from"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_20px"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_20px"
                android:gravity="center"
                android:text="@string/ic_Right"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100%"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_commit"
                android:gravity="center"
                android:paddingBottom="@dimen/trans_5px"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:paddingTop="@dimen/trans_5px"
                android:text="@string/str_create_order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="194"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_20px"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="99"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textColor="@color/color_font4"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_come_from"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_40px"
        android:background="@color/base_mask"/>


</LinearLayout>