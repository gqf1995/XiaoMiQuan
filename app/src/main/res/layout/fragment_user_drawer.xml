<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/user_bg_homepage"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="@dimen/trans_40px"
                >

                <LinearLayout
                    android:id="@+id/lin_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ic_pic"
                        android:layout_width="@dimen/trans_80px"
                        android:layout_height="@dimen/trans_80px"
                        android:layout_marginRight="@dimen/trans_12px"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/trans_10px"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_trans_48px"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_30px"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_28px"/>

            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/homepage"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_user_home_page"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/bigv"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_my_focuse_people"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>

            <TextView
                android:id="@+id/tv_focuse_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/fans"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_my_fans"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>

            <TextView
                android:id="@+id/tv_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/aide"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_customer_service"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/price"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_kline_setting"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/setting"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_other_setting"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/share"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_recommended"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_50px"
            android:paddingTop="@dimen/trans_20px">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/trans_50px"
                android:layout_height="@dimen/trans_50px"
                android:layout_marginRight="@dimen/trans_30px"
                app:srcCompat="@drawable/out"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_logout"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_34px"/>


        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


