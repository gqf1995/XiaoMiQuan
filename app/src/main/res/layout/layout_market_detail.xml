                app:textTint="@color/color_font4"
                >

            </com.fivefivelike.mybaselibrary.view.spinnerviews.NiceSpinner>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

