<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/trans_10px"
    android:layout_marginLeft="@dimen/trans_30px"
    android:layout_marginRight="@dimen/trans_30px"
    android:layout_marginTop="@dimen/trans_10px"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/trans_10px"
    app:cardElevation="0dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_120px"
        android:layout_gravity="bottom"
        android:src="@color/color_blue"
        app:riv_corner_radius_bottom_left="@dimen/trans_10px"
        app:riv_corner_radius_bottom_right="@dimen/trans_10px"
        />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/trans_120px"
        android:layout_height="@dimen/trans_120px"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        app:riv_corner_radius_top_left="@dimen/trans_10px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_120px"
        android:orientation="horizontal"
        >

        <include layout="@layout/layout_coin_market"/>

    </LinearLayout>

</android.support.v7.widget.CardView>