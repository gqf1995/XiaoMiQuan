<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/trans_20px">

    <LinearLayout
        android:id="@+id/lin_creat"
        android:layout_width="@dimen/trans_220px"
        android:layout_height="@dimen/trans_198px"
        android:background="@drawable/shape_imaginary_line"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_Plus"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_trans_8px"
            android:gravity="center"
            android:text="加入或创建"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_20px" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/riv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/trans_220px"
            android:layout_height="@dimen/trans_198px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:layout_alignRight="@+id/iv_head"
            android:layout_alignLeft="@+id/iv_head"
            android:layout_centerInParent="true"
            android:background="@color/black_transparent_50"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/trans_28px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trans_20px"
                android:orientation="horizontal">

                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic_Group"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_20px" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_4px"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_20px" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/trans_100px"
                android:layout_height="@dimen/trans_2px"
                android:layout_marginTop="@dimen/trans_10px"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trans_10px"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_25px" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
