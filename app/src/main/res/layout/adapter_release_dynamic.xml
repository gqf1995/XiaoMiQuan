<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/trans_20px">

    <com.fivefivelike.mybaselibrary.view.IconFontTextview
        android:id="@+id/icf_plus"
        android:layout_width="@dimen/trans_160px"
        android:layout_height="@dimen/trans_160px"
        android:background="@drawable/shape_imaginary_line"
        android:gravity="center"
        android:text="@string/ic_Plus"
        android:textColor="@color/color_font2"
        android:textSize="@dimen/text_trans_50px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/trans_160px"
        android:layout_height="@dimen/trans_160px"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg" />
</LinearLayout>
