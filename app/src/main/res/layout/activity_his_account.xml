<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.xiaomiquan.widget.JudgeNestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/trans_40px">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cv_head"
                        android:layout_width="@dimen/trans_88px"
                        android:layout_height="@dimen/trans_88px"
                        android:src="@color/color_blue" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_24px"
                        android:text=""
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/trans_35px"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_tv_creat_for"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/trans_26px" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/trans_26px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/trans_20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_20px"
                        android:text="该账户有新操作时通知我"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/trans_30px" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/checkbox_notification"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:kswAnimationDuration="300"
                        app:kswBackDrawable="@drawable/ios_back_drawable"
                        app:kswBackMeasureRatio="1.4"
                        app:kswThumbDrawable="@drawable/ios_thumb_selector"
                        app:kswThumbMarginBottom="-8dp"
                        app:kswThumbMarginLeft="-5dp"
                        app:kswThumbMarginRight="-5dp"
                        app:kswThumbMarginTop="-2.5dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_20px"
                    android:background="@color/base_mask" />

                <LinearLayout
                    android:id="@+id/lin_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <skin.support.widget.SkinCompatFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary">

                        <com.tablayout.CommonTabLayout
                            android:id="@+id/tl_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_110px"
                            android:orientation="horizontal"
                            app:tl_indicator_corner_radius="@dimen/trans_100px"
                            tl:tl_indicator_color="@color/color_blue"
                            tl:tl_indicator_height="@dimen/trans_5px"
                            tl:tl_textSelectColor="@color/color_blue"
                            tl:tl_textUnselectColor="@color/color_font2"
                            tl:tl_textsize="@dimen/text_trans_30px"
                            tl:tl_underline_color="#1A000000"
                            tl:tl_underline_height="0dp" />
                    </skin.support.widget.SkinCompatFrameLayout>

                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />


            </LinearLayout>
        </com.xiaomiquan.widget.JudgeNestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>