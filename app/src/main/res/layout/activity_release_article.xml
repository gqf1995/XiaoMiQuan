<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />


    <com.xiaomiquan.widget.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/album_sp_20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_200px">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_283px" />

                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:id="@+id/icf_update_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/str_tv_addimg"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_40px" />
            </RelativeLayout>

            <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
                android:id="@+id/et_input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/album_dp_15"
                android:hint="@string/str_et_title"
                android:maxLength="25"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_35px"
                android:textStyle="bold"
                app:met_baseColor="@color/white"
                app:met_primaryColor="@color/color_blue"
                app:met_textColor="@color/color_font1"
                app:met_textColorHint="@color/color_font4"
                app:met_underlineColor="@color/base_mask" />

            <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
                android:id="@+id/et_con"
                android:layout_width="match_parent"
                android:layout_height="@dimen/durban_dp_200"
                android:layout_marginTop="@dimen/album_dp_10"
                android:gravity="left|top"
                android:hint="@string/str_et_con"
                android:maxLength="140"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/trans_32px"
                app:met_baseColor="@color/white"
                app:met_primaryColor="@color/color_blue"
                app:met_textColor="@color/color_font2"
                app:met_textColorHint="@color/color_font4"
                app:met_underlineColor="@color/base_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:orientation="horizontal">

                <skin.support.widget.SkinCompatCheckBox
                    android:id="@+id/ck_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_ck_live"
                    android:textColor="@color/color_font1"
                    android:theme="@style/BlueCheckBox" />

                <skin.support.widget.SkinCompatCheckBox
                    android:id="@+id/ck_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_100px"
                    android:text="@string/str_ck_circle"
                    android:textColor="@color/color_font1"
                    android:theme="@style/BlueCheckBox" />
            </LinearLayout>
        </LinearLayout>
    </com.xiaomiquan.widget.StickyScrollView>


</LinearLayout>
