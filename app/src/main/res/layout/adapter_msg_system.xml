<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/trans_40px"
    android:paddingTop="@dimen/trans_24px">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_font3"
        android:textSize="@dimen/text_trans_24px"/>


    <LinearLayout
        android:id="@+id/lin_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_40px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/trans_30px"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:layout_marginLeft="@dimen/trans_20px"
            android:layout_marginRight="@dimen/trans_20px"
            android:background="@color/base_mask"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/trans_30px"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px"/>

        <TextView
            android:id="@+id/tv_look_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_look_detail"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_trans_28px"/>

    </LinearLayout>

</LinearLayout>