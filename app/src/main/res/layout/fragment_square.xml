<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xiaomiquan.widget.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <cn.bingoogolapple.bgabanner.BGABanner
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_328px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ry_entrance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_80px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        android:paddingRight="@dimen/trans_40px">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/civ_img"
                            android:layout_width="@dimen/trans_40px"
                            android:layout_height="@dimen/trans_40px"
                            app:srcCompat="@drawable/ic_language" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_16px"
                            android:text="热门资讯"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_message_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18/01/23"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_24px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:background="@color/base_mask" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ry_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_400px"
                    android:padding="@dimen/trans_8px"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_20px"
                    android:background="@color/base_mask" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_80px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/trans_40px"
                        android:layout_height="@dimen/trans_40px"
                        app:srcCompat="@drawable/ic_language" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_16px"
                        android:text="大V直播"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_live_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/01/23"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_24px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_1px"
                    android:background="@color/base_mask" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_live"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_trans_10px"
                    android:scrollbars="none" />

            </LinearLayout>
        </com.xiaomiquan.widget.StickyScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/flt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/album_dp_50"
            app:backgroundTint="@color/color_blue"
            app:fabSize="normal"
            app:rippleColor="@color/color_font1"
            app:srcCompat="@drawable/ic_write" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>