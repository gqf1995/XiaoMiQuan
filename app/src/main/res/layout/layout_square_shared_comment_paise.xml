<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trans_100px"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_shared"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <skin.support.widget.SkinCompatImageView
            android:id="@+id/icf_shared"
            android:layout_width="@dimen/trans_34px"
            android:layout_height="@dimen/trans_34px"
            app:srcCompat="@drawable/ic_reply" />

        <TextView
            android:id="@+id/tv_shared_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_14px"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_30px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <skin.support.widget.SkinCompatImageView
            android:id="@+id/tv_comment"
            android:layout_width="@dimen/trans_34px"
            android:layout_height="@dimen/trans_34px"
            app:srcCompat="@drawable/ic_comment" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_14px"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_30px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_praise"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <skin.support.widget.SkinCompatImageView
            android:id="@+id/tv_praise"
            android:layout_width="@dimen/trans_34px"
            android:layout_height="@dimen/trans_34px"
            app:srcCompat="@drawable/ic_like" />

        <TextView
            android:id="@+id/tv_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_14px"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_30px" />
    </LinearLayout>

    <Space
        android:layout_width="@dimen/trans_100px"
        android:layout_height="wrap_content" />
</LinearLayout>
