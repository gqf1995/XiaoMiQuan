<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinCompatLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:foreground="@color/base_mask"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="424"
        android:paddingBottom="@dimen/trans_10px"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingTop="@dimen/trans_10px"
        android:text="@string/str_name_of_the"
        android:textColor="@color/color_font2"
        android:textSize="@dimen/text_trans_24px"/>


    <LinearLayout
        android:id="@+id/lin_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="220"
        android:orientation="horizontal">

        <com.fivefivelike.mybaselibrary.view.spinnerviews.NiceSpinner
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingRight="@dimen/trans_20px"
            android:text="1å¤©"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_24px"
            app:backgroundSelector="@color/transparent"
            app:hideArrow="true"
            app:textTint="@color/color_font2"
            >

        </com.fivefivelike.mybaselibrary.view.spinnerviews.NiceSpinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_rise"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="110"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <com.xiaomiquan.widget.GainsTabView
            android:id="@+id/tv_rise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            />


    </LinearLayout>

</skin.support.widget.SkinCompatLinearLayout>