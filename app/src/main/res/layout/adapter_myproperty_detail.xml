<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/trans_20px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_30px"
            android:layout_height="@dimen/trans_30px"
            app:srcCompat="@drawable/dogecoin" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_10px"
            android:gravity="center"
            android:text="@string/str_currency"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_30px" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_now_price"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_30px" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_tv_num"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/text_trans_30px" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/trans_20px"
        android:gravity="center"
        android:text="@string/str_tv_dodeal"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_trans_30px" />

</LinearLayout>
