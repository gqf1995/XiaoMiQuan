<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/text_trans_15px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:32"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/trans_28px" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaaaaaaaaa"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/trans_32px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_trans_8px"
        android:layout_marginTop="@dimen/text_trans_8px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cv_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利好"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/trans_32px" />

        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_trans_20px"
            android:text="利空"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/trans_32px" />

        <View
            android:id="@+id/v_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:id="@+id/icv_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/trans_20px"
            android:gravity="center"
            android:text="@string/ic_Share"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_trans_20px"
            android:text="分享"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/trans_32px" />

    </LinearLayout>


</LinearLayout>
