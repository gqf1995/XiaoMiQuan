<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar" />

    <com.xiaomiquan.widget.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/text_trans_20px"
                    android:paddingLeft="@dimen/text_trans_20px"
                    android:paddingRight="@dimen/text_trans_12px"
                    android:paddingTop="@dimen/text_trans_20px">

                    <TextView
                        android:id="@+id/tv_input_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_tv_deal_choose"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/trans_20px" />

                    <LinearLayout
                        android:layout_width="@dimen/trans_142px"
                        android:layout_height="@dimen/trans_40px"
                        android:layout_margin="@dimen/trans_30px"
                        android:background="@drawable/shape_mask_t20radiu"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="搜索"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/trans_20px" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/text_trans_1px"
                    android:layout_height="match_parent"
                    android:background="@color/base_mask" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_trans_38px"
                        android:paddingRight="@dimen/text_trans_32px"
                        android:paddingTop="@dimen/text_trans_56px">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/trans_64px"
                            android:layout_height="@dimen/trans_64px"
                            app:srcCompat="@drawable/dogecoin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="BTC"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/trans_50px"
                            android:textStyle="bold" />


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/lin_sell"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:text="@string/ic_Search"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_30px" />

                                <TextView
                                    android:id="@+id/tv_sell_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6278"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/trans_40px"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/lin_sell"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/text_trans_10px"
                                android:orientation="horizontal">

                                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:text="@string/ic_Search"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_24px" />

                                <TextView
                                    android:id="@+id/tv_buy_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/trans_15px"
                                    android:text="6278"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/trans_24px" />


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/text_trans_38px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_tv_balance"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/trans_24px" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="24USD"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/trans_24px" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_trans_1px"
                        android:background="@color/base_mask" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_trans_1px"
                        android:background="@color/base_mask" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/text_trans_38px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_tv_sell_price"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/trans_28px" />

                        <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
                            android:id="@+id/et_sell_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/str_et_buy_price"
                            android:singleLine="true"
                            android:textColorHint="@color/color_font3"
                            android:textSize="@dimen/trans_28px"
                            app:met_baseColor="@color/white"
                            app:met_primaryColor="@color/color_blue"
                            app:met_textColor="@color/color_font2"
                            app:met_textColorHint="@color/color_font4"
                            app:met_underlineColor="@color/base_mask" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/trans_28px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_trans_30px"
                            android:text="限价"
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/trans_28px" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/text_trans_38px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_tv_sell_num"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/trans_28px" />

                        <com.fivefivelike.mybaselibrary.view.materialedittext.MaterialEditText
                            android:id="@+id/et_sell_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/str_et_buy_num"
                            android:singleLine="true"
                            android:textColorHint="@color/color_font3"
                            android:textSize="@dimen/trans_28px"
                            app:met_baseColor="@color/white"
                            app:met_primaryColor="@color/color_blue"
                            app:met_textColor="@color/color_font2"
                            app:met_textColorHint="@color/color_font4"
                            app:met_underlineColor="@color/base_mask" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BTC"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/trans_28px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_trans_30px"
                            android:text="限价"
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/trans_28px"
                            android:visibility="invisible" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_trans_1px"
                        android:background="@color/base_mask" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/text_trans_25px">

                        <TextView
                            android:id="@+id/tv_commit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/color_blue"
                            android:padding="@dimen/text_trans_20px"
                            android:text="@string/str_tv_commit"
                            android:textColor="@color/color_fafafa"
                            android:textSize="@dimen/trans_28px" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_trans_20px"
                android:background="@color/base_mask" />

            <com.tablayout.CommonTabLayout
                android:id="@+id/tl_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_79px"
                android:orientation="horizontal"
                app:tl_indicator_corner_radius="@dimen/trans_100px"
                app:tl_indicator_margin_bottom="@dimen/trans_15px"
                tl:tl_indicator_color="@color/color_font1"
                tl:tl_indicator_height="@dimen/trans_5px"
                tl:tl_indicator_width="@dimen/trans_32px"
                tl:tl_textSelectColor="@color/color_font1"
                tl:tl_textUnselectColor="@color/color_font3"
                tl:tl_textsize="@dimen/text_trans_28px"
                tl:tl_underline_color="#1A000000"
                tl:tl_underline_height="0dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_10px"
                    android:background="@drawable/shadow_line" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_sliding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>
            </FrameLayout>
        </LinearLayout>

    </com.xiaomiquan.widget.StickyScrollView>
</LinearLayout>
