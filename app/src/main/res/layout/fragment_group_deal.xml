<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_toolbar_with_statusbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_90px"
            android:layout_gravity="bottom"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/trans_25px"
                android:paddingRight="@dimen/trans_25px"
                android:text="@string/ic_icon_left"
                android:rotation="180"
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_30px"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_32px"/>

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/trans_25px"
                android:paddingRight="@dimen/trans_25px"
                android:text="@string/ic_icon_right"
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_30px"/>
        </LinearLayout>
    </FrameLayout>


    <com.xiaomiquan.widget.JudgeNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tablayout.CommonTabLayout
                android:id="@+id/tl_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_85px"
                android:orientation="horizontal"
                app:tl_divider_color="@color/base_mask"
                app:tl_divider_padding="@dimen/trans_20px"
                app:tl_divider_width="@dimen/trans_1px"
                app:tl_iconGravity="LEFT"
                app:tl_tab_space_equal="true"
                tl:tl_indicator_color="@color/color_25A73F"
                tl:tl_indicator_height="@dimen/trans_5px"
                tl:tl_textSelectColor="@color/color_25A73F"
                tl:tl_textUnselectColor="@color/color_font3"
                tl:tl_textsize="@dimen/text_trans_28px"
                tl:tl_underline_color="#1A000000"
                tl:tl_underline_height="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="174"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_input_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/trans_60px"
                            android:gravity="center"
                            android:text="@string/str_tv_deal_choose"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_20px"/>


                        <skin.support.widget.SkinCompatEditText
                            android:id="@+id/et_coin_search"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_40px"
                            android:layout_marginBottom="@dimen/trans_20px"
                            android:layout_marginLeft="@dimen/trans_20px"
                            android:layout_marginRight="@dimen/trans_20px"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/str_search"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_20px"
                            android:textColor="@color/color_font1"
                            android:textColorHint="@color/color_font2"
                            android:textSize="@dimen/text_trans_20px"/>


                        <com.fivefivelike.mybaselibrary.view.NoParentsTouchFramelayout
                            android:id="@+id/fl_currency"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_463px"
                            android:nestedScrollingEnabled="false">

                        </com.fivefivelike.mybaselibrary.view.NoParentsTouchFramelayout>


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/trans_1px"
                        android:layout_height="match_parent"
                        android:background="@color/base_mask"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="574"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_150px"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/trans_40px"
                            android:paddingRight="@dimen/trans_30px"
                            android:paddingTop="@dimen/trans_55px">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/trans_65px"
                                android:layout_height="@dimen/trans_65px"
                                app:srcCompat="@drawable/dogecoin"/>

                            <TextView
                                android:id="@+id/tv_coin_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/trans_25px"
                                android:gravity="center"
                                android:text="BTC"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_50px"
                                android:textStyle="bold"/>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:id="@+id/lin_sell"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:text="$"
                                        android:textColor="@color/color_font3"
                                        android:textSize="@dimen/text_trans_30px"/>

                                    <TextView
                                        android:id="@+id/tv_sell_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="6278"
                                        android:textColor="@color/color_font1"
                                        android:textSize="@dimen/text_trans_40px"
                                        android:textStyle="bold"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/lin_sell"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="@dimen/trans_10px"
                                    android:orientation="horizontal">

                                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:text="Â¥"
                                        android:textColor="@color/color_font3"
                                        android:textSize="@dimen/text_trans_24px"/>

                                    <TextView
                                        android:id="@+id/tv_buy_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/trans_15px"
                                        android:text="6278"
                                        android:textColor="@color/color_font1"
                                        android:textSize="@dimen/text_trans_24px"/>


                                </LinearLayout>

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_100px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/trans_40px"
                            >


                            <TextView
                                android:id="@+id/tv_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="24USD"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_1px"
                            android:background="@color/base_mask"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_1px"
                            android:background="@color/base_mask"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_100px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/trans_40px"
                            >

                            <TextView
                                android:id="@+id/tv_price_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/str_tv_sell_price"
                                android:textColor="@color/color_font2"
                                android:textSize="@dimen/text_trans_28px"/>

                            <EditText
                                android:id="@+id/et_sell_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="220"
                                android:background="@null"
                                android:gravity="center"
                                android:hint="@string/str_et_buy_price"
                                android:singleLine="true"
                                android:textColor="@color/color_font1"
                                android:textColorHint="@color/color_font3"
                                android:textSize="@dimen/text_trans_28px"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="USD"
                                android:textColor="@color/color_font2"
                                android:textSize="@dimen/trans_28px"/>


                            <com.xiaomiquan.widget.DropDownView
                                android:id="@+id/lin_choose"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="140"
                                android:gravity="center_vertical"
                                android:orientation="vertical">


                            </com.xiaomiquan.widget.DropDownView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_100px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/trans_40px"
                            >

                            <TextView
                                android:id="@+id/tv_num_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/str_tv_sell_num"
                                android:textColor="@color/color_font2"
                                android:textSize="@dimen/trans_28px"/>

                            <EditText
                                android:id="@+id/et_sell_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="220"
                                android:background="@null"
                                android:gravity="center"
                                android:hint="@string/str_et_buy_num"
                                android:singleLine="true"
                                android:textColor="@color/color_font1"
                                android:textColorHint="@color/color_font3"
                                android:textSize="@dimen/trans_28px"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BTC"
                                android:textColor="@color/color_font2"
                                android:textSize="@dimen/trans_28px"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="140"
                                android:visibility="invisible"
                                >


                            </Space>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_1px"
                            android:background="@color/base_mask"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_130px"
                            android:orientation="vertical"
                            android:padding="@dimen/trans_25px">

                            <TextView
                                android:id="@+id/tv_commit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/trans_100px"
                                android:layout_marginRight="@dimen/trans_100px"
                                android:background="@drawable/select_commit"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="@string/str_tv_commit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_trans_28px"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_20px"
                    android:background="@color/base_mask"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tablayout.CommonTabLayout
                    android:id="@+id/tl_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_80px"
                    android:orientation="horizontal"
                    tl:tl_indicator_color="@color/color_blue"
                    tl:tl_indicator_height="@dimen/trans_5px"
                    tl:tl_textSelectColor="@color/color_blue"
                    tl:tl_textUnselectColor="@color/color_font3"
                    tl:tl_textsize="@dimen/text_trans_28px"
                    tl:tl_underline_color="#1A000000"
                    tl:tl_underline_height="0dp"/>


            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_sliding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </com.xiaomiquan.widget.JudgeNestedScrollView>
</LinearLayout>
