<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_root"
        android:layout_width="@dimen/trans_255px"
        android:layout_height="@dimen/trans_255px"
        android:background="@drawable/shape_mask_t20radiu"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingTop="@dimen/trans_20px"
        >

        <com.fivefivelike.mybaselibrary.view.FontTextview
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_mask_dark_maxradiu"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_20px"
            android:paddingRight="@dimen/trans_20px"
            android:paddingTop="@dimen/trans_5px"
            android:text="BTC"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_24px"
            app:TypeFace="Regular"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/trans_10px"
            android:text="@string/str_global_index"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_26px"/>

        <com.fivefivelike.mybaselibrary.view.FontTextview
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="396762.22"
            android:textColor="@color/increasing_color"
            android:textSize="@dimen/text_trans_35px"/>

        <com.fivefivelike.mybaselibrary.view.FontTextview
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="$126543.63"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_22px"
            app:TypeFace="Regular"/>

    </LinearLayout>
</FrameLayout>
