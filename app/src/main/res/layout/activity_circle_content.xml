<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xiaomiquan.widget.JudgeNestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_400px"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="@dimen/trans_20px">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="币圈神探"
                            android:textColor="@color/color_font1"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/album_dp_10"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/str_creater"
                                android:textColor="@color/color_font1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_creator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/album_dp_6"
                                android:singleLine="true"
                                android:text="啊啊"
                                android:textColor="@color/color_blue"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_trans_50px"
                                android:singleLine="true"
                                android:text="@string/str_fucose_people_num"
                                android:textColor="@color/color_font1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/album_dp_15"
                                android:singleLine="true"
                                android:text="200"
                                android:textColor="@color/color_font1"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_20px"
                    android:background="@color/base_mask" />

                <LinearLayout
                    android:id="@+id/lin_tab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_90px"
                    android:focusable="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/trans_20px">

                    <com.xiaomiquan.widget.DropDownView
                        android:id="@+id/lin_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                    </com.xiaomiquan.widget.DropDownView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/album_dp_1"
                        android:layout_weight="1" />

                    <com.xiaomiquan.widget.DropDownView
                        android:id="@+id/lin_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    </com.xiaomiquan.widget.DropDownView>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pull_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />

            </LinearLayout>


        </com.xiaomiquan.widget.JudgeNestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/civ_send"
        android:layout_width="@dimen/trans_92px"
        android:layout_height="@dimen/trans_92px"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/trans_80px"
        android:layout_marginRight="@dimen/trans_80px"
        app:srcCompat="@drawable/ic_write" />

    <include layout="@layout/include_toolbar_with_statusbar" />


</FrameLayout>