<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/trans_5px"/>
            <solid android:color="@color/color_font3"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trans_5px"/>
            <gradient
                android:angle="45"
                android:endColor="@color/color_blue_dark_more"
                android:centerColor="@color/color_blue_dark"
                android:startColor="@color/color_blue_more"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trans_5px"/>
            <gradient
                android:angle="45"
                android:endColor="@color/color_blue_dark_more"
                android:centerColor="@color/color_blue_dark"
                android:startColor="@color/color_blue_more"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trans_5px"/>
            <gradient
                android:angle="45"
                android:endColor="@color/color_blue_dark_more"
                android:centerColor="@color/color_blue_dark"
                android:startColor="@color/color_blue_more"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trans_5px"/>
            <gradient
                android:angle="45"
                android:endColor="@color/color_blue_dark"
                android:centerColor="@color/color_blue_more"
                android:startColor="@color/color_blue"/>
        </shape>
    </item>
</selector>